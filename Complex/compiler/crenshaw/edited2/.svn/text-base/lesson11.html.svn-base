begin
<P>

   NextExpression;
<P>

   SetEqual;
<P>

end;
<P>


<P>


{---------------------------------------------------------------}
{ Recognize and Translate a Relational "Less Than or Equal" }

<P>

procedure LessOrEqual;
<P>

begin
<P>


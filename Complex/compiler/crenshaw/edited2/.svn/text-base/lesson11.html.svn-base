<P>

   Term;
<P>

   PopAdd;
<P>

end;
<P>


<P>


{-------------------------------------------------------------}
{ Recognize and Translate a Subtract }

<P>

procedure Subtract;
<P>

begin
<P>

   Next;
<P>

   Term;
<P>

   PopSub;
<P>

end;
<P>


<P>


{---------------------------------------------------------------}
{ Parse and Translate an Expression }

<P>

procedure Expression;
<P>

begin
<P>

   if IsAddop(Token) then
<P>

      Clear
<P>

   else
<P>

      Term;
<P>

   while IsAddop(Token) do begin
<P>

      Push;
<P>

      case Token of
<P>

       '+': Add;
<P>

       '-': Subtract;
<P>

      end;
<P>

   end;
<P>

end;
<P>


<P>



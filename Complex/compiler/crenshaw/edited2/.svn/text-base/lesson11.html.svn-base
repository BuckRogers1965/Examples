{--------------------------------------------------------------}
{ Get an Identifier }

<P>

procedure GetName;
<P>

begin
<P>

   SkipWhite;
<P>

   if Not IsAlpha(Look) then Expected('Identifier');
   Token := 'x';
   Value := '';
   repeat
      Value := Value + UpCase(Look);
      GetChar;
   until not IsAlNum(Look);
end;


procedure GetNum;
<P>

begin
<P>

   SkipWhite;
<P>

   if not IsDigit(Look) then Expected('Number');
   Token := '#';
   Value := '';
   repeat
      Value := Value + Look;
      GetChar;
   until not IsDigit(Look);
end;


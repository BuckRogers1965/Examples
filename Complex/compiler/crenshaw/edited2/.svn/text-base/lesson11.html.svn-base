{---------------------------------------------------------------}
{ Parse and Translate a Math Factor }

<P>

procedure BoolExpression; Forward;
<P>


<P>

procedure Factor;
<P>

begin
<P>

   if Token = '(' then begin
<P>

      Next;
<P>

      BoolExpression;
<P>

      MatchString(')');
<P>

      end
<P>

   else begin
<P>

      if Token = 'x' then
<P>

         LoadVar(Value)
<P>

      else if Token = '#' then
<P>

         LoadConst(Value)
<P>

      else Expected('Math Factor');
<P>

      Next;
<P>

   end;
<P>

end;
<P>


<P>


{--------------------------------------------------------------}
{ Recognize and Translate a Multiply }

<P>

procedure Multiply;
<P>

begin
<P>

   Next;
<P>

   Factor;
<P>

   PopMul;
<P>

end;
<P>


<P>


{-------------------------------------------------------------}
{ Recognize and Translate a Divide }

<P>

procedure Divide;
<P>

begin
<P>

   Next;
<P>

   Factor;
<P>

   PopDiv;
<P>

end;
<P>


<P>


{---------------------------------------------------------------}
{ Parse and Translate a Math Term }

<P>

procedure Term;
<P>

begin
<P>

   Factor;
<P>

   while IsMulop(Token) do begin
<P>

      Push;
<P>

      case Token of
<P>

       '*': Multiply;
<P>

       '/': Divide;
<P>

      end;
<P>

   end;
<P>

end;
<P>


<P>


{--------------------------------------------------------------}
{ Recognize and Translate an Add }

<P>

procedure Add;
<P>

begin
<P>


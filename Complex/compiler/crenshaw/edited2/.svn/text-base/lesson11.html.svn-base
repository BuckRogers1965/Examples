begin
<P>

   Next;
<P>

   MatchString('(');
<P>

   ReadVar;
<P>

   while Token = ',' do begin
<P>

      Next;
<P>

      ReadVar;
<P>

   end;
<P>

   MatchString(')');
<P>

end;
<P>


<P>


{--------------------------------------------------------------}
{ Process a Write Statement }

<P>

procedure DoWrite;
<P>

begin
<P>

   Next;
<P>

   MatchString('(');
<P>

   Expression;
<P>

   WriteIt;
<P>

   while Token = ',' do begin
<P>

      Next;
<P>

      Expression;
<P>

      WriteIt;
<P>

   end;
<P>

   MatchString(')');
<P>

end;
<P>


<P>


{--------------------------------------------------------------}
{ Parse and Translate a Block of Statements }

<P>

procedure Block;
<P>

begin
<P>

   Scan;
<P>

   while not(Token in ['e', 'l']) do begin
      case Token of
       'i': DoIf;
       'w': DoWhile;
       'R': DoRead;
       'W': DoWrite;
      else Assignment;
      end;
      Scan;
   end;
end;


<P>

   SetLessOrEqual;
<P>

end;
<P>


<P>


{---------------------------------------------------------------}
{ Recognize and Translate a Relational "Not Equals" }

<P>

procedure NotEqual;
<P>

begin
<P>

   NextExpression;
<P>

   SetNEqual;
<P>

end;
<P>


<P>


{---------------------------------------------------------------}
{ Recognize and Translate a Relational "Less Than" }

<P>

procedure Less;
<P>

begin
<P>

   Next;
<P>

   case Token of
<P>

     '=': LessOrEqual;
<P>

     '>': NotEqual;
<P>

   else begin
<P>

           CompareExpression;
<P>

           SetLess;
<P>

        end;
<P>

   end;
<P>

end;
<P>


<P>


{---------------------------------------------------------------}
{ Recognize and Translate a Relational "Greater Than" }

<P>

procedure Greater;
<P>

begin
<P>

   Next;
<P>

   if Token = '=' then begin
<P>

      NextExpression;
<P>

      SetGreaterOrEqual;
<P>

      end
<P>

   else begin
<P>

      CompareExpression;
